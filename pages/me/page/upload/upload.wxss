/* pages/textbook/textbook.wxss */
page {height:100%}



.weui-btn{
  background: #19be6b;
}

.text-body{
  width: 100%;
  background: rgb(240, 237, 237);
  min-height: 100%;
}

.txt-header{
  width: 100%;
  background: rgb(240, 237, 237);
  height: 10px;
}

.select-type{
  margin-top: 15px;
  width: 100%;
  height: 50px;
  background: white;
}

.select-file{
  margin-top: 15px;
  width: 100%;
  height: 50px;
  background: white;
}



.file-title{
  margin-left: 5%;
  width: 15%;
  height: 50px;
  font-size: 15px;
  float: left;
  color: rgb(114, 111, 111);
  text-align: center;
  line-height: 50px;
}

.file-name{ 
  margin-left: 2%;
  width: 55%;
  font-size: 15px;
  height: 50px;
  float: left;
  text-align: center;
  line-height: 50px;
  overflow: hidden;
}

.file-button{
  margin-right: 5%;
  width: 15%;
  font-size: 15px;
  height: 50px;
  float: right;
  text-align: center;
  line-height: 50px;
}


.select-button{
  margin-top: 15px;
  width: 100%;
  height: 50px;
}

.button-view{
  width: 100%;
  height: 50px;
  margin: 0 auto;
  font-size: 15px;
  float: left;
  color: rgb(201, 196, 196);
  text-align: center;
  line-height: 50px;
}


.subject-button{
  margin-left: 5%;
  width: 15%;
  height: 40px;
  font-size: 15px;
  float: left;
  color: rgba(128, 209, 128, 0.425);
  text-align: center;
  line-height: 40px;
}

.picker{
  font-size: 20px;
  color: red;
}